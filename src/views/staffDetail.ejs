<%- include('partials/header') %>
<h1>Details of <%= staff.full_name %></h1>

<ul class="list-group">
  <li class="list-group-item"><strong>Email:</strong> <%= staff.email || '-' %></li>
  <li class="list-group-item"><strong>Username:</strong> <%= staff.username %></li>
  <li class="list-group-item"><strong>Store:</strong> <%= staff.store_id %></li>
  <li class="list-group-item"><strong>Status:</strong> 
    <% if (staff.active) { %>
      <span class="badge bg-success">Active</span>
    <% } else { %>
      <span class="badge bg-danger">Inactive</span>
    <% } %>
  </li>
  <li class="list-group-item"><strong>Address:</strong> <%= staff.address %> <%= staff.address2 || '' %>, <%= staff.district %></li>
  <li class="list-group-item"><strong>Postal Code:</strong> <%= staff.postal_code %></li>
  <li class="list-group-item"><strong>City:</strong> <%= staff.city %></li>
  <li class="list-group-item"><strong>Country:</strong> <%= staff.country %></li>
  <li class="list-group-item"><strong>Phone:</strong> <%= staff.phone %></li>
  <li class="list-group-item"><strong>Last Update:</strong> <%= staff.last_update %></li>
</ul>

<a href="/staff" class="btn btn-secondary mt-3">Back to list</a>
<%- include('partials/footer') %>
