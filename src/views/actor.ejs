<%- include('partials/header') %>
<h1 class="mb-4">Acteurslijst</h1>
<% if (actor && actor.length > 0) { %>
  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Id</th>
          <th>Volledige naam</th>
          <th>Aantal films</th>
          <th>Actie</th>
        </tr>
      </thead>
      <tbody>
        <% actor.forEach(i => { %>
          <tr id="actor-row-<%= i.actor_id %>">
            <td><%= i.actor_id %></td>
            <td><%= i.full_name %></td>
            <td><%= i.film_count %></td>
            <td>
              <div class="btn-group" role="group">
                <a href="/actor/<%= i.actor_id %>" class="btn btn-sm btn-outline-primary" title="Bekijk details">
                  <i class="bi bi-eye-fill"></i>
                </a>
                <a href="/actor/<%= i.actor_id %>/edit" class="btn btn-sm btn-outline-warning" title="Bewerk acteur">
                  <i class="bi bi-pencil-fill"></i>
                </a>
                <button class="btn btn-sm btn-outline-danger" 
                        title="Verwijder acteur" 
                        onclick="openDeleteModal('<%= i.actor_id %>', '<%= i.full_name %>')">
                  <i class="bi bi-trash-fill"></i>
                </button>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } else { %>
  <div class="alert alert-info">Geen acteurs gevonden.</div>
<% } %>


<%- include('partials/footer') %>
