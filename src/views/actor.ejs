<%- include('partials/header') %>
<h1 class="mb-4">Acteurslijst</h1>
<% if (actor && actor.length > 0) { %>
  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Id</th>
          <th>Volledige naam</th>
          <th>Aantal films</th>
          <th>Actie</th>
        </tr>
      </thead>
      <tbody>
        <% actor.forEach(i => { %>
          <tr id="actor-row-<%= i.actor_id %>">
            <td><%= i.actor_id %></td>
            <td><%= i.full_name %></td>
            <td><%= i.film_count %></td>
            <td>
              <div class="btn-group" role="group">
                <a href="/actor/<%= i.actor_id %>" class="btn btn-sm btn-outline-primary" title="Bekijk details">
                  <i class="bi bi-eye-fill"></i>
                </a>
                <a href="/actor/<%= i.actor_id %>/edit" class="btn btn-sm btn-outline-warning" title="Bewerk acteur">
                  <i class="bi bi-pencil-fill"></i>
                </a>
                <button class="btn btn-sm btn-outline-danger" 
                        title="Verwijder acteur" 
                        onclick="openDeleteModal('<%= i.actor_id %>', '<%= i.full_name %>')">
                  <i class="bi bi-trash-fill"></i>
                </button>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } else { %>
  <div class="alert alert-info">Geen acteurs gevonden.</div>
<% } %>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="deleteForm" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Bevestig verwijdering</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Sluiten"></button>
        </div>
        <div class="modal-body">
          <p id="deleteMessage"></p>
          <div class="mb-3">
            <label for="staffPassword" class="form-label">Voer het medewerkers wachtwoord in:</label>
            <input type="password" class="form-control" id="staffPassword" name="password" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
          <button type="submit" class="btn btn-danger">Verwijder</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function openDeleteModal(actorId, fullName) {
    document.getElementById('deleteMessage').innerText = 
      `Weet je zeker dat je ${fullName} wilt verwijderen?`;
    document.getElementById('deleteForm').action = `/actor/${actorId}/delete`;
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
  }
</script>

<%- include('partials/footer') %>
