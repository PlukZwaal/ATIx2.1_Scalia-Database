<%- include('partials/header') %>
<h1 class="mb-4">Acteurslijst</h1>
<% if (actor && actor.length > 0) { %>
  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Naam</th>
          <th>Voornaam</th>
          <th>Achternaam</th>
          <th>Actie</th>
        </tr>
      </thead>
      <tbody>
        <% actor.forEach(i => { %>
          <tr>
            <td><%= i.first_name %> <%= i.last_name %></td>
            <td><%= i.first_name %></td>
            <td><%= i.last_name %></td>
            <td>
              <a href="/actor/<%= i.actor_id %>" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-eye-fill"></i>
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } else { %>
  <div class="alert alert-info">Geen acteurs gevonden.</div>
<% } %>
<%- include('partials/footer') %>