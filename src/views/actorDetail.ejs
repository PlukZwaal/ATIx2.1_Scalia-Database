<%- include('partials/header') %>

<div class="mb-4">
  <h1>Acteurslijst -> <%= actor.full_name %></h1>
  <p>Hieronder zie je een lijst met alle films waar in <strong><%= actor.full_name %></strong> heeft gespeelt.</p>
</div>

<div class="card-body">
  <% if (films && films.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Titel</th>
            <th>Jaar</th>
            <th>Categorie</th>
            <th>Lengte</th>
            <th>Rating</th>
            <th>Beschrijving</th>
          </tr>
        </thead>
        <tbody>
          <% films.forEach(film => { %>
            <tr>
              <td>
                <strong><%= film.title %></strong>
              </td>
              <td><%= film.release_year || '-' %></td>
              <td>
                <% if (film.category_name) { %>
                  <span class="badge bg-info"><%= film.category_name %></span>
                <% } else { %>
                  <span class="text-muted">-</span>
                <% } %>
              </td>
              <td>
                <% if (film.length) { %>
                  <%= film.length %> min
                <% } else { %>
                  -
                <% } %>
              </td>
              <td>
                <% if (film.rating) { %>
                  <span class="badge bg-warning text-dark"><%= film.rating %></span>
                <% } else { %>
                  -
                <% } %>
              </td>
              <td>
                <% if (film.description) { %>
                  <small class="text-muted">
                    <%= film.description.length > 100 ? film.description.substring(0, 100) + '...' : film.description %>
                  </small>
                <% } else { %>
                  <span class="text-muted">Geen beschrijving</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-info">
      <i class="bi bi-info-circle"></i>
      Geen films gevonden voor <%= actor.full_name %>.
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>