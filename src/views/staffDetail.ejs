<%- include('partials/header') %>

<h1 class="mb-4">Details van <%= staff.full_name %></h1>

<ul class="list-group mb-3">
  <li class="list-group-item"><strong>Email:</strong> <%= staff.email || '-' %></li>
  <li class="list-group-item"><strong>Username:</strong> <%= staff.username %></li>
  <li class="list-group-item"><strong>Store:</strong> <%= staff.store_id %></li>
  <li class="list-group-item">
    <strong>Status:</strong> 
    <% if (staff.active) { %>
      <span class="badge bg-success">Actief</span>
    <% } else { %>
      <span class="badge bg-danger">Inactief</span>
    <% } %>
  </li>
  <li class="list-group-item"><strong>Adres:</strong> <%= staff.address %> <%= staff.address2 || '' %>, <%= staff.district %></li>
  <li class="list-group-item"><strong>Postcode:</strong> <%= staff.postal_code %></li>
  <li class="list-group-item"><strong>Stad:</strong> <%= staff.city %></li>
  <li class="list-group-item"><strong>Land:</strong> <%= staff.country %></li>
  <li class="list-group-item"><strong>Tel:</strong> <%= staff.phone %></li>
  <li class="list-group-item">
    <strong>Laatst bijgewerkt:</strong> 
    <%= new Date(staff.last_update).toLocaleString('nl-NL', { 
      year: 'numeric', month: '2-digit', day: '2-digit',
      hour: '2-digit', minute: '2-digit'
    }) %>
  </li>
</ul>

<a href="/staff" class="btn btn-secondary">Terug naar lijst</a>

<%- include('partials/footer') %>
